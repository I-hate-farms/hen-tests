[Desktop Entry]
Type=Application
Name=Eidete
Comment=Record screencasts
GenericName=Screencaster
Exec=eidete %U
Icon=eidete
Terminal=false
Categories=GNOME;GTK;Utility;
X-GNOME-Gettext-Domain=eidete

X-Ayatana-Desktop-Shortcuts=Pause;Finish

[Pause Shortcut Group]
Name=Pause Recording
Exec=eidete --pause
TargetEnvironment=Unity

[Finish Shortcut Group]
Name=Finish Recording
Exec=eidete --finish
TargetEnvironment=Unity
